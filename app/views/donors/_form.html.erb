<p id="existing_donor_message" style="display: none;">
  <span class="highlight"></span>&nbsp;<%= link_to "click here", account_url, class: "sofiabold white" -%>
</p>

<!-- Selector -->
<div class='account-first-page-options-container flex flex-wrap justify-center bg-accent-color dgray mb4'>
  <div class='account-first-page-options double-border-button col-5 m1'>
    <p class='sofiabold h6 py4 center' data-amount="0.25">$.25 a day</p>
  </div>
  <div class='account-first-page-options double-border-button col-5 m1'>
    <p class='sofiabold h6 py4 center' data-amount="0.50">$.50 a day</p>
  </div>
  <div class='account-first-page-options double-border-button col-5 m1'>
    <p class='sofiabold h6 py4 center' data-amount="1.00">$1.00 a day</p>
  </div>
  <div class='account-first-page-options double-border-button col-5 m1'>
    <p class='sofiabold h6 py4 center' data-amount="2.00">$2.00 a day</p>
  </div>
</div>


<h6 class='steps dgray sofiasemibold caps' id='step3'>Step 3 of 3</h6>
<p class='sub-heading sofiabold pt1 pb2 dgray no-wrap'>
  Enter your billing info
</p>
<p class='h6 MuseoSans300 pb3 lgray'>
  We will transfer your money each month, every 30 days from sign up.
</p>

<section id="other">
  <%= render "donors/stripe_card_fields", form_builder: form_builder %>
</section>

<section id="form_footer" class="clear">
  <div class="field mb1">
    <%= form_builder.text_field :password, tabindex: 11, placeholder: "Password", type: "password", autocomplete: :off, autocorrect: "off", spellcheck: "off", autocapitalize: "off", class: "h5 my1 py1 border bg-notwhite sofiabold velure email-enter full-width" %>
  </div>

