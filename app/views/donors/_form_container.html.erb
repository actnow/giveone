<% @donor ||= Donor.new.tap { |d| d.started_on = Time.zone.now.to_date } %>

<%# render 'donors/authenticate_form' %>

<div class='clearfix account-page'>
  <div class='col col-12 py4 px2 flex flex-column items-center border-first-panel relative bc-white bg-notwhite min-panel-height' style='z-index:1'>
    <div class='py4 max-width-3'>
      <div class="px2 col-12">
        <h6 class='steps dgray sofiasemibold caps'>Step 1 of 3</h6>
      </div>

      <div data-category="<%= @nonprofit.category.id %>" class='donate-card col col-12 py2 min-panel-height'>
        <div class='donate-nonprofit-image-container block items-center pb3 left col-12 md-col-6 sm-col-12'>
          <img class='donate-nonprofit-image m0 px2 fit' src="<%= @nonprofit.photo.url %>"/>
        </div>
        <div class='column-img-right clearfix pt2 pb2 mb2 px2 items-center mx-auto max-width-4'>
          <div class='col md-col-12 sm-col-12 panel-text sofiasemibold dgray'>
            <p class='sofiabold h6 pb2 accent-color my0'><%= @nonprofit.category.name %></p>
            <p class='nonprofit-name sofiabold h2 dgray pb3'><%= @nonprofit.name %></p>
            <p class='description MuseoSans300 h5 pb3 lgray'>
              <%= @nonprofit.description.html_safe %>
              <a class="accent-color text-decoration-none" href="<%= @nonprofit.website_url %>" target='_blank'>Visit the <%= @nonprofit.name %> website â†³.</a>
              <br/><br/>
              <span class='accent-color'><%= @nonprofit.blurb %></span>
            </p>
          </div>

        </div>
      </div>
      <div class="px2 col-12">
        <h6 class='steps dgray sofiasemibold caps'>Step 2 of 3</h6>
        <p class='sub-heading sofiabold pt1 pb2 dgray no-wrap'>
          Choose your amount
        </p>
        <p class='h6 MuseoSans300 pb3 lgray'>
          Choose an amount you are comfortable with donating each day towards your cause of choice.
        </p>
        <%= form_for @donor, as: :donor, url: "/donate", html: {autocomplete: "on"} do |d| %>
          <%= render "donors/form", form_builder: d %>
        <% end -%>
      </div>

    </div>
  </div>
</div>
