<div class='clearfix account-page'>
  <div class='col col-12 py4 px3 flex flex-column items-center border-first-panel relative bc-white bg-notwhite min-panel-height' style='z-index:1'>
    <div class='py4 max-width-2'>
      <p class='sub-heading sofiabold pt3 pb2 dgray'>
        Hi, there!
      </p>
      <p class='h6 MuseoSans300 pb3 lgray'>
        Don't have an account? <%= link_to "Choose a charity to get started.", donate_path %>
      </p>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div>
          <%= f.email_field :email, :autofocus => true, placeholder: "Email", class: "email-enter h5 my1 py1 border bg-notwhite sofiabold velure full-width" %>
        </div>
        <div>
          <%= f.password_field :password, placeholder: "Password", class: "email-enter h5 my1 py1 border bg-notwhite sofiabold velure full-width" %>
        </div>

        <div class="mb2">
          <%= f.submit "Sign in", class: "email-next h6 my1 mb2 py2 sofiabold white bg-velure full-width" %>
          <% if devise_mapping.rememberable? -%>
          <div class="clearfix">
            <div class="checkbox small">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "clearfix inline-block MuseoSans300 dgray" %>
            </div>
          </div>
          <% end -%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
